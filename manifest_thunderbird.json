{
    "manifest_version": 2,
    "name": "Elden Email",
    "version": "1.1.1",
    "description": "Shows an Elden Ring banner when you send an email",
    "permissions": [
        "storage",
        "compose",
        "tabs"
    ],
    "browser_specific_settings": {
        "thunderbird": {
            "id": "elden-email@vrail.com"
        }
    },
    "compose_action": {
        "default_popup": "popup.html",
        "default_icon": "assets/icon.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "icons": {
        "48": "assets/icon.png"
    },
    "options_ui": {
        "page": "popup.html",
        "open_in_tab": true
    },
    "web_accessible_resources": [
        "assets/email_sent_yellow.png",
        "assets/email_sent_blue.png",
        "assets/email_sent_red.png",
        "assets/elden_ring_sound.mp3",
        "assets/Matinia.otf",
        "style.css"
    ]
}
